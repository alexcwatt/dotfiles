[alias]
	a = add
	c = commit
	cam = commit --amend
	d = diff
	dc = diff --cached
	dm = "!f(){ git diff $(git main-branch); }; f"
	main-branch = !git symbolic-ref refs/remotes/origin/HEAD | cut -d'/' -f4
	m = "!f(){ git checkout $(git main-branch); }; f"
	p = push
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --ignore
	s = status -s
	up = "!f(){ git rebase origin/$(git main-branch); }; f"
[url "git@github.com:"]
	insteadOf = "gh:"
[pull]
	rebase = false
[push]
	default = current
[user]
    name = Alex Watt
[include]
	path = .gitconfig-local
	path = /Users/alex/.config/dev/gitconfig
[includeIf "gitdir:alexcwatt/"]
	path = .gitconfig-personal
[includeIf "gitdir/i:Shopify/"]
	path = .gitconfig-shopify
[init]
	defaultBranch = main
