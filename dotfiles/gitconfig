[core]
	commitGraph = true
[alias]
	a = add
	c = commit
	cam = commit --amend
	d = diff
	dc = diff --cached
	dm = diff master
	p = push
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --ignore
	s = status -s
	up = rebase origin/master
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[pull]
	rebase = false
[push]
	default = current
